<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewmodel"
            type="com.example.kiwitexteditor.fragment.save.SaveViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/colorActionbar"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/colorActionbar"
            android:layout_height="?actionBarSize">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ivLeft"
                    android:layout_width="wrap_content"
                    android:tint="@color/colorgreen"
                    android:layout_alignParentLeft="true"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_left" />
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorgreen"
                    android:layout_toRightOf="@id/ivLeft"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textsizeTitle"
                    android:text="@string/save"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidline"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ja.burhanrashid52.photoeditor.PhotoEditorView
            android:id="@+id/ivSaveImage"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toTopOf="@id/guidline"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llSave"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidline5"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidline3"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidline4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="139dp" />
                <LinearLayout
                    android:id="@+id/ShareandSave"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvShare"
                        android:text="Share"
                        android:textColor="@color/colorWhile"
                        android:textSize="@dimen/textsizeTitle"
                        android:textAllCaps="true"
                        android:padding="15dp"
                        android:gravity="end"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/bg_share"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <View
                        android:id="@+id/view"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>
                    <TextView
                        android:id="@+id/tvSave"
                        android:text="Save"
                        android:padding="15dp"
                        android:background="@drawable/bg_save"
                        android:textColor="@color/colorWhile"
                        android:textSize="@dimen/textsizeTitle"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
