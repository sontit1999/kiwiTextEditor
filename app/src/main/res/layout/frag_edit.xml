<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewmodel"
            type="com.example.kiwitexteditor.fragment.edit.EditViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/rootview"
        android:background="@color/colorbgEdit"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@color/colorbgEdit"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="?actionBarSize">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ivHome"
                    android:layout_width="35dp"
                    android:tint="@color/colorWhile"
                    android:layout_alignParentLeft="true"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_home_black_24dp" />
                <TextView
                    android:id="@+id/tvSave"
                    android:textColor="@color/colorWhile"
                    android:background="@drawable/bgdone"
                   android:layout_centerVertical="true"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/textsizeContent"
                    android:text="@string/done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <ja.burhanrashid52.photoeditor.PhotoEditorView
                android:id="@+id/ivPhoto"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                android:layout_margin="20dp"
                android:src="@drawable/img_splash"
                app:layout_constraintBottom_toTopOf="@id/ivUndo"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
        <ImageView
            android:id="@+id/ivUndo"
            app:layout_constraintBottom_toTopOf="@id/rvTool"
            android:src="@drawable/ic_undo"
            android:layout_marginRight="15dp"
            app:layout_constraintRight_toLeftOf="@id/ivRedo"
            android:layout_width="@dimen/undo_size"
            android:layout_height="@dimen/undo_size"/>
        <ImageView
            android:id="@+id/ivRedo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rvTool"
            android:src="@drawable/ic_redo"
            android:layout_width="@dimen/undo_size"
            android:layout_height="@dimen/undo_size"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="0dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTool"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintRight_toRightOf="parent"
            tools:listitem="@layout/row_editing_tools"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFilter"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/row_filter_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
